<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- helmet.title.toString() %>
    <%- helmet.meta.toString() %>
    <%- helmet.link.toString() %>
    <meta content="text/html; charset=UTF-8" http-equiv="content-type" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="/<%- webpackAsset('bundle', 'css') %>" />
  </head>
  <body>
    <div id="app"><%- content %></div>
    <div id="devtools"></div>
    <% if (!__DEVELOPMENT__) { %>
      <script src="/<%- webpackAsset('vendor', 'js') %>"></script>
    <% } %>
    <script type="text/javascript">window.__INITIAL_STATE__ = <%- initialState %></script>
    <script src="/<%- webpackAsset('bundle', 'js') %>"></script>
  </body>
</html>
